<h1>Listing Ideas</h1>
<%= link_to 'New Idea', new_idea_path, class: 'btn btn-primary' %>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-12">
        <h2><%= image_tag idea.picture_url(:thumb) if idea.picture? %> <%= link_to idea.name, idea %></h2>
        <p><%= idea.description %></p>
      </div>
    <% end %>
  </div>
<% end %>
